algoritmo quantidadeNumerosPrimos;
// Síntese: Algorítmo que analisa quantos números digitados realmente são primos.
//  Objetivo: Quantos são digitados e primos.
//  Entrada : N inteiros
//  Saída   : quantidadeDeNumeros, quantidadeDeNumerosPrimos

principal
	inteiro numero, quantidadeDeNumeros, quantidadeDeNumerosPrimos;
	leia(numero);
	quantidadeDeNumeros = 1;
	se (isPrime(numero) == 1) entao quantidadeDeNumerosPrimos = 1;
	senao quantidadeDeNumerosPrimos = 0;
	fimSe
	
	enquanto (numero>1) faca
		leia(numero);
		quantidadeDeNumeros = quantidadeDeNumeros + 1;
		se (isPrime(numero) == 1) entao
			quantidadeDeNumerosPrimos = quantidadeDeNumerosPrimos + 1;
		fimSe
	fimEnquanto

	escreval("NUMEROS DIGITADOS = ", quantidadeDeNumeros-1);
	escreval("NUMEROS PRIMOS = ", quantidadeDeNumerosPrimos);
    
fimPrincipal

funcao inteiro isPrime(inteiro n)
	inteiro r, f;

	se (n == 2 ou n == 3) entao retorna 1; fimSe
    se (n < 2 ou n % 2 == 0) entao retorna 0; fimSe
    se (n < 9) entao retorna 1; fimSe
    se (n % 3 == 0) entao retorna 0; fimSe
    r = exp(n, 0.5);
    f = 5;
    enquanto (f <= r) faca
        se (n % f == 0) entao retorna 0; fimSe
        se (n % (f + 2) == 0) entao retorna 0; fimSe
        f = f+6;
    fimEnquanto
    retorna 1;
fimFuncao
