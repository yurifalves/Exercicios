algoritmo semNome;
// Síntese
//  Objetivo:  
//  Entrada :
//  Saída   :


principal
	inteiro idades[100];
	real pesos[100];
	inteiro idade_maiorpeso;
	real peso_menoridade;
	inteiro i;

	inteiro N;
	leia(N);

	para (i de 0 ate N-1 passo 1) faca
		leia(idades[i]);
		leia(pesos[i]);
	fimPara

	idade_maiorpeso = idades[idxMaxArrayReal(pesos, N)];
	peso_menoridade = pesos[idxMinArrayInteiro(idades, N)];

	se (minArrayInteiro(idades, N)<=0 ou minArrayReal(pesos, N)<=0) entao
		escreval("DADOS INCORRETOS");
	senao
		escreval("IDADE DA PESSOA DE MAIOR PESO = ", idade_maiorpeso);
		escreval("PESO DA PESSOA DE MENOR IDADE = ", peso_menoridade::2);
	fimSe

fimPrincipal

funcao inteiro idxMaxArrayReal(real vetor[], inteiro tamanhoVetor)
	inteiro i;
	inteiro idxMax;

	para (i de 0 ate tamanhoVetor-1 passo 1) faca
		se (i==0) entao idxMax = 0;
		senao
			se (vetor[i] > vetor[idxMax]) entao idxMax = i; fimSe
		fimSe
	fimPara
	retorna idxMax;
fimFuncao

funcao inteiro idxMinArrayInteiro(inteiro vetor[], inteiro tamanhoVetor)
	inteiro i;
	inteiro idxMin;

	para (i de 0 ate tamanhoVetor-1 passo 1) faca
		se (i==0) entao idxMin = 0;
		senao
			se (vetor[i] < vetor[idxMin]) entao idxMin = i; fimSe
		fimSe
	fimPara
	retorna idxMin;
fimFuncao

funcao inteiro minArrayInteiro(inteiro vetor[], inteiro tamanhoVetor)
	inteiro i;
	inteiro min;
	para (i de 0 ate tamanhoVetor-1 passo 1) faca
		se (i==0) entao min = vetor[i];
		senao
			se (vetor[i] < min) entao min = vetor[i]; fimSe
		fimSe
	fimPara
	retorna min;
fimFuncao

funcao inteiro minArrayReal(real vetor[], inteiro tamanhoVetor)
	inteiro i;
	inteiro min;
	para (i de 0 ate tamanhoVetor-1 passo 1) faca
		se (i==0) entao min = vetor[i];
		senao
			se (vetor[i] < min) entao min = vetor[i]; fimSe
		fimSe
	fimPara
	retorna min;
fimFuncao
