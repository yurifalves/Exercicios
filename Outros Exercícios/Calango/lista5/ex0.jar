algoritmo semNome;
// Síntese
//  Objetivo:  
//  Entrada :
//  Saída   :


principal
	// Declarações
	inteiro opcao;

	// Instruções

	escreval("=-=-=-=-=-=-=-=-=-=-=-=-=-=-=");
	escreval(" CALCULADORA ÁLGEBRA LINEAR ");
	escreval("=-=-=-=-=-=-=-=-=-=-=-=-=-=-=");

	escreval("Escolha uma OPÇÃO: ");
	escreval("(1) Calculadora de Matrizes");
	escreval("(2) Calculadora de Vetores");
	escreva("--> ");
	leia(opcao);

	escreval("");

	escolha (opcao)
    caso 1
        matrizes();
        interrompa;
    caso 2
        vetores();
        interrompa;
    outroCaso
    	enquanto (opcao!=1 e opcao!=2) faca
    		escreva("POR FAVOR ESCOLHA UMA OPÇÃO VÁLIDA, (1) Para a calculadora de Matrizes e (2) Para a calculadora de Vetores: ");
    		leia(opcao);
    	fimEnquanto

    	// Só chega aqui, caso o usuário passe a inserir de fato uma opção válida (1) ou (2)
		se (opcao == 1) entao matrizes(); fimSe
		se (opcao == 2) entao vetores(); fimSe
	fimEscolha

fimPrincipal

procedimento matrizes()
	escreval("CACULADORA MATRIZES");
fimProcedimento

procedimento vetores()
	inteiro n;  // número de componentes dos vetores que participarão do cálculo
	inteiro u[100], v[100];  // Os dois vetores em R^n, u=(u_1, u_2, ..., u_n) e v=(v_1, v_2, ..., v_n), onde 0 ≤ n ≤ 100
	
	inteiro i;
	escreval("CALCULADORA VETORES");
	escreval("");
	escreva("Insira o Número de componentes dos vetores: ");
	leia(n);
	escreval("");

	escreval("Insira as", " ", n, " ", "componentes do primeiro vetor: ");
	para (i de 0 ate n-1 passo 1) faca
		leia(u[i]);
	fimPara
	escreval("Insira as", " ", n, " ", "componentes do segundo vetor: ");
	para (i de 0 ate n-1 passo 1) faca
		leia(v[i]);
	fimPara
	escreval("Os vetores inseridos foram ", "u = ", formatarVetor(u, n));
	escreval("Os vetores inseridos foram ", "v = ", formatarVetor(v, n));
	
fimProcedimento

funcao texto formatarVetor(inteiro vetor[], inteiro tamanhoVetor)
  // Retorna a string "[componente_1, componente_2, ..., componente_n]" correspondente à um vetor em R^n, ou seja, de n componentes
  
	inteiro i;
	texto arrayFormatado;
	arrayFormatado = "";
	para (i de 0 ate tamanhoVetor-1 passo 1) faca
		se (i!=tamanhoVetor-1) entao arrayFormatado = arrayFormatado + vetor[i] + ", ";
		senao arrayFormatado = arrayFormatado + vetor[i]; fimSe
	fimPara
	arrayFormatado = "(" + arrayFormatado + ")";
	retorna arrayFormatado;
fimFuncao
