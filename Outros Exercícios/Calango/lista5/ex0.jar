algoritmo semNome;
// Síntese
//  Objetivo:  
//  Entrada :
//  Saída   :


principal
	// Declarações
	inteiro opcao;

	// Instruções

	escreval("=-=-=-=-=-=-=-=-=-=-=-=-=-=-=");
	escreval(" CALCULADORA ÁLGEBRA LINEAR ");
	escreval("=-=-=-=-=-=-=-=-=-=-=-=-=-=-=");

	escreval("Escolha uma OPÇÃO: ");
	escreval("(1) Calculadora de Matrizes");
	escreval("(2) Calculadora de Vetores");
	escreva("--> ");
	leia(opcao);

	escreval("");

	escolha (opcao)
    caso 1
        matrizes();
        interrompa;
    caso 2
        vetores();
        interrompa;
    outroCaso
    	enquanto (opcao!=1 e opcao!=2) faca
    		escreva("POR FAVOR ESCOLHA UMA OPÇÃO VÁLIDA, (1) Para a calculadora de Matrizes e (2) Para a calculadora de Vetores: ");
    		leia(opcao);
    	fimEnquanto

    	// Só chega aqui, caso o usuário passe a inserir de fato uma opção válida (1) ou (2)
		se (opcao == 1) entao matrizes(); fimSe
		se (opcao == 2) entao vetores(); fimSe
	fimEscolha

fimPrincipal

procedimento matrizes()
	escreval("CACULADORA MATRIZES");
fimProcedimento

procedimento vetores()
	escreval("CALCULADORA VETORES");
fimProcedimento
