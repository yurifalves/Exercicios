algoritmo classificacaoConcurso;
// Escreve na tela os nomes das melhores notas
//  Objetivo:  Em ordem decrescente printar os nomes dos melhores alunos
//  Entrada :  uma sequencia de notas e alunos
//  Saída   :  o ranking desejado por nós


principal
	texto aluno, nomes[100];
	real notas[100];
	inteiro N, min, max, i;

	leia(N);
	para (i de 0 ate N-1 passo 1) faca
		leia(nomes[i]);
		leia(notas[i]);
	fimPara

	min = minArrayReal(notas, N);
	
	para (i de 0 ate N-1 passo 1) faca
		max = maxArrayReal(notas, N);
		aluno = nomes[idxMaxArrayReal(notas, N)];
		escreval(i+1 + " " + "-" + " " + aluno);
		notas[idxMaxArrayReal(notas, N)] = min-1;
	fimPara

fimPrincipal

funcao inteiro minArrayReal(real vetor[], inteiro tamanhoVetor)
	inteiro i;
	inteiro min;
	para (i de 0 ate tamanhoVetor-1 passo 1) faca
		se (i==0) entao min = vetor[i];
		senao
			se (vetor[i] < min) entao min = vetor[i]; fimSe
		fimSe
	fimPara
	retorna min;
fimFuncao

funcao inteiro maxArrayReal(real vetor[], inteiro tamanhoVetor)
	inteiro i;
	inteiro max;
	para (i de 0 ate tamanhoVetor-1 passo 1) faca
		se (i==0) entao max = vetor[i];
		senao
			se (vetor[i] > max) entao max = vetor[i]; fimSe
		fimSe
	fimPara
	retorna max;
fimFuncao

funcao inteiro idxMaxArrayReal(real vetor[], inteiro tamanhoVetor)
	inteiro i;
	inteiro idxMax;

	para (i de 0 ate tamanhoVetor-1 passo 1) faca
		se (i==0) entao idxMax = 0;
		senao
			se (vetor[i] > vetor[idxMax]) entao idxMax = i; fimSe
		fimSe
	fimPara
	retorna idxMax;
fimFuncao
